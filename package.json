{
  "name": "svn-git-auto-commit",
  "displayName": "SVN/Git 自动提交",
  "description": "VSCode插件，支持SVN和Git的自动提交功能，提供智能化的版本控制解决方案",
  "version": "1.0.0",
  "publisher": "QINGYUAI",
  "author": {
    "name": "QINGYUAI",
    "email": "2321135061@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/QINGYUAI/svn-auto-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/QINGYUAI/svn-auto-vscode/issues"
  },
  "homepage": "https://github.com/QINGYUAI/svn-auto-vscode#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.73.0"
  },
  "keywords": [
    "svn",
    "git",
    "version control",
    "auto commit",
    "源码管理",
    "自动提交",
    "版本控制"
  ],
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git",
    "workspaceContains:.svn",
    "onCommand:svn-auto-commit.commit",
    "onCommand:svn-auto-commit.autoCommit",
    "onCommand:svn-auto-commit.update",
    "onCommand:svn-auto-commit.viewHistory",
    "onCommand:svn-auto-commit.showMenu",
    "onCommand:svn-auto-commit.showBranchInfo",
    "onCommand:svn-auto-commit.resolveConflict",
    "onCommand:svn-auto-commit.openSettings",
    "onCommand:svn-auto-commit.setupSvnAuth"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "svn-auto-commit.commit",
        "title": "提交更改",
        "category": "SVN/Git 自动提交",
        "icon": "$(git-commit)"
      },
      {
        "command": "svn-auto-commit.autoCommit",
        "title": "启用/禁用自动提交",
        "category": "SVN/Git 自动提交",
        "icon": "$(sync-ignored)"
      },
      {
        "command": "svn-auto-commit.update",
        "title": "更新/拉取",
        "category": "SVN/Git 自动提交",
        "icon": "$(sync)"
      },
      {
        "command": "svn-auto-commit.viewHistory",
        "title": "查看历史",
        "category": "SVN/Git 自动提交",
        "icon": "$(history)"
      },
      {
        "command": "svn-auto-commit.showMenu",
        "title": "显示操作菜单",
        "category": "SVN/Git 自动提交",
        "icon": "$(menu)"
      },
      {
        "command": "svn-auto-commit.showBranchInfo",
        "title": "显示分支信息",
        "category": "SVN/Git 自动提交",
        "icon": "$(git-branch)"
      },
      {
        "command": "svn-auto-commit.resolveConflict",
        "title": "解决冲突",
        "category": "SVN/Git 自动提交",
        "icon": "$(diff)"
      },
      {
        "command": "svn-auto-commit.openSettings",
        "title": "打开设置",
        "category": "SVN/Git 自动提交",
        "icon": "$(gear)"
      },
      {
        "command": "svn-auto-commit.setupSvnAuth",
        "title": "设置SVN认证",
        "category": "SVN/Git 自动提交",
        "icon": "$(key)"
      },
      {
        "command": "svn-auto-commit.setupAiApiKey",
        "title": "设置AI API密钥",
        "category": "SVN/Git 自动提交",
        "icon": "$(sparkle)"
      },
      {
        "command": "svn-auto-commit.generateCommitMessage",
        "title": "AI生成提交信息",
        "category": "SVN/Git 自动提交",
        "icon": "$(sparkle)"
      }
    ],
    "keybindings": [
      {
        "command": "svn-auto-commit.commit",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "!terminalFocus"
      },
      {
        "command": "svn-auto-commit.update",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "!terminalFocus"
      },
      {
        "command": "svn-auto-commit.viewHistory",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "!terminalFocus"
      },
      {
        "command": "svn-auto-commit.showMenu",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "!terminalFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "svn-auto-commit.commit",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.autoCommit",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.update",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.viewHistory",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.showMenu",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.showBranchInfo",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.resolveConflict",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.openSettings",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.setupSvnAuth",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "svn-auto-commit.commit",
          "group": "svn-auto-commit@1",
          "when": "explorerResourceIsFolder || !explorerResourceIsRoot"
        },
        {
          "command": "svn-auto-commit.update",
          "group": "svn-auto-commit@2",
          "when": "explorerResourceIsFolder || !explorerResourceIsRoot"
        },
        {
          "command": "svn-auto-commit.viewHistory",
          "group": "svn-auto-commit@3",
          "when": "!explorerResourceIsFolder"
        },
        {
          "command": "svn-auto-commit.showMenu",
          "group": "svn-auto-commit@4",
          "when": "explorerResourceIsFolder"
        }
      ],
      "editor/context": [
        {
          "command": "svn-auto-commit.commit",
          "group": "svn-auto-commit@1",
          "when": "editorTextFocus"
        },
        {
          "command": "svn-auto-commit.viewHistory",
          "group": "svn-auto-commit@2",
          "when": "editorTextFocus"
        },
        {
          "command": "svn-auto-commit.resolveConflict",
          "group": "svn-auto-commit@3",
          "when": "editorTextFocus"
        }
      ],
      "editor/title": [
        {
          "command": "svn-auto-commit.commit",
          "group": "navigation@1",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.update",
          "group": "navigation@2",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.viewHistory",
          "group": "navigation@3",
          "when": "true"
        }
      ],
      "editor/title/context": [
        {
          "command": "svn-auto-commit.commit",
          "group": "svn-auto-commit@1",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.viewHistory",
          "group": "svn-auto-commit@2",
          "when": "true"
        }
      ],
      "scm/title": [
        {
          "command": "svn-auto-commit.commit",
          "group": "navigation@1",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.update",
          "group": "navigation@2",
          "when": "true"
        },
        {
          "command": "svn-auto-commit.autoCommit",
          "group": "navigation@3",
          "when": "true"
        }
      ],
      "scm/inputBox": [
        {
          "command": "svn-auto-commit.generateCommitMessage",
          "group": "ai@1",
          "when": "scmProvider != ''"
        }
      ],
      "view/title": [
        {
          "command": "svn-auto-commit.showMenu",
          "group": "navigation@1",
          "when": "view == workbench.scm"
        },
        {
          "command": "svn-auto-commit.openSettings",
          "group": "navigation@2",
          "when": "view == workbench.scm"
        }
      ]
    },
    "configuration": {
      "title": "SVN/Git 自动提交",
      "properties": {
        "svn-auto-commit.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用插件"
        },
        "svn-auto-commit.defaultVCS": {
          "type": "string",
          "enum": [
            "auto",
            "svn",
            "git"
          ],
          "default": "auto",
          "description": "默认版本控制系统"
        },
        "svn-auto-commit.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "是否自动检测版本控制系统"
        },
        "svn-auto-commit.commitShortcut": {
          "type": "string",
          "default": "ctrl+alt+v",
          "description": "提交快捷键 (V for Version control)"
        },
        "svn-auto-commit.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "是否在状态栏显示插件状态"
        },
        "svn-auto-commit.confirmBeforeCommit": {
          "type": "boolean",
          "default": true,
          "description": "提交前是否确认"
        },
        "svn-auto-commit.svn.path": {
          "type": "string",
          "default": "svn",
          "description": "SVN命令路径"
        },
        "svn-auto-commit.svn.username": {
          "type": "string",
          "default": "",
          "description": "SVN用户名"
        },
        "svn-auto-commit.svn.password": {
          "type": "string",
          "default": "",
          "description": "SVN密码（加密存储）"
        },
        "svn-auto-commit.svn.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "提交前是否自动更新"
        },
        "svn-auto-commit.svn.addUnversioned": {
          "type": "boolean",
          "default": false,
          "description": "是否自动添加未版本化文件"
        },
        "svn-auto-commit.svn.ignoreExternals": {
          "type": "boolean",
          "default": true,
          "description": "是否忽略外部定义"
        },
        "svn-auto-commit.git.path": {
          "type": "string",
          "default": "git",
          "description": "Git命令路径"
        },
        "svn-auto-commit.git.username": {
          "type": "string",
          "default": "",
          "description": "Git用户名"
        },
        "svn-auto-commit.git.email": {
          "type": "string",
          "default": "",
          "description": "Git邮箱"
        },
        "svn-auto-commit.git.autoPull": {
          "type": "boolean",
          "default": true,
          "description": "提交前是否自动拉取"
        },
        "svn-auto-commit.git.autoPush": {
          "type": "boolean",
          "default": false,
          "description": "提交后是否自动推送"
        },
        "svn-auto-commit.git.addAll": {
          "type": "boolean",
          "default": false,
          "description": "是否自动添加所有变更"
        },
        "svn-auto-commit.contextAware.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用上下文感知提交"
        },
        "svn-auto-commit.contextAware.autoSelectCurrentFile": {
          "type": "boolean",
          "default": true,
          "description": "在编辑器中提交时是否自动选择当前文件"
        },
        "svn-auto-commit.contextAware.autoGenerateMessage": {
          "type": "boolean",
          "default": true,
          "description": "是否自动生成提交信息"
        },
        "svn-auto-commit.contextAware.skipFileSelection": {
          "type": "boolean",
          "default": false,
          "description": "当只有当前文件变更时是否跳过文件选择"
        },
        "svn-auto-commit.autoCommit.enabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用自动提交功能"
        },
        "svn-auto-commit.autoCommit.delay": {
          "type": "number",
          "default": 30,
          "description": "文件变更后的延迟时间（秒），超过此时间后自动提交"
        },
        "svn-auto-commit.autoCommit.showNotification": {
          "type": "boolean",
          "default": true,
          "description": "自动提交后是否显示通知"
        },
        "svn-auto-commit.autoCommit.messageTemplate": {
          "type": "string",
          "default": "",
          "description": "自动提交信息模板，支持变量: {files}, {date}, {datetime}, {count}"
        },
        "svn-auto-commit.autoCommit.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/.git/**",
            "**/node_modules/**",
            "**/.svn/**",
            "**/*.log",
            "**/dist/**",
            "**/build/**",
            "**/.env",
            "**/.DS_Store"
          ],
          "description": "自动提交忽略的文件模式（glob模式）"
        },
        "svn-auto-commit.commit.template": {
          "type": "string",
          "default": "更新 {fileList}",
          "description": "提交信息模板，支持变量: {date}, {time}, {datetime}, {username}, {fileCount}, {fileList}, {changeType}"
        },
        "svn-auto-commit.commit.username": {
          "type": "string",
          "default": "",
          "description": "提交用户名"
        },
        "svn-auto-commit.commit.validateMessage": {
          "type": "boolean",
          "default": false,
          "description": "是否验证提交信息格式"
        },
        "svn-auto-commit.commit.minLength": {
          "type": "number",
          "default": 5,
          "description": "提交信息最小长度"
        },
        "svn-auto-commit.commit.maxLength": {
          "type": "number",
          "default": 100,
          "description": "提交信息最大长度"
        },
        "svn-auto-commit.commit.requirePrefix": {
          "type": "boolean",
          "default": false,
          "description": "是否要求提交信息前缀"
        },
        "svn-auto-commit.commit.allowedPrefixes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["feat", "fix", "docs", "style", "refactor", "perf", "test", "chore", "revert"],
          "description": "允许的提交信息前缀"
        },
        "svn-auto-commit.ai.enabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用AI自动生成提交信息"
        },
        "svn-auto-commit.ai.autoSelect": {
          "type": "boolean",
          "default": true,
          "description": "是否自动选择有密钥的AI服务（如果配置的AI没有密钥，会自动使用其他有密钥的AI）"
        },
        "svn-auto-commit.ai.provider": {
          "type": "string",
          "enum": ["openai", "claude", "gemini", "qwen", "tongyi", "ernie", "wenxin", "deepseek", "moonshot", "custom"],
          "default": "openai",
          "description": "AI服务提供商 (openai/claude/gemini/qwen/ernie/deepseek/moonshot/custom)"
        },
        "svn-auto-commit.ai.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API密钥（建议使用安全存储）"
        },
        "svn-auto-commit.ai.openai.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "OpenAI模型名称"
        },
        "svn-auto-commit.ai.openai.apiUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "OpenAI API地址"
        },
        "svn-auto-commit.ai.claude.apiKey": {
          "type": "string",
          "default": "",
          "description": "Claude API密钥（建议使用安全存储）"
        },
        "svn-auto-commit.ai.claude.model": {
          "type": "string",
          "default": "claude-3-sonnet-20240229",
          "description": "Claude模型名称"
        },
        "svn-auto-commit.ai.claude.apiUrl": {
          "type": "string",
          "default": "https://api.anthropic.com/v1/messages",
          "description": "Claude API地址"
        },
        "svn-auto-commit.ai.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API密钥（建议使用安全存储）"
        },
        "svn-auto-commit.ai.gemini.model": {
          "type": "string",
          "default": "gemini-pro",
          "description": "Gemini模型名称"
        },
        "svn-auto-commit.ai.gemini.apiUrl": {
          "type": "string",
          "default": "",
          "description": "Gemini API地址（留空使用默认地址）"
        },
        "svn-auto-commit.ai.qwen.apiKey": {
          "type": "string",
          "default": "",
          "description": "通义千问API密钥（建议使用安全存储）"
        },
        "svn-auto-commit.ai.qwen.model": {
          "type": "string",
          "default": "qwen-turbo",
          "description": "通义千问模型名称"
        },
        "svn-auto-commit.ai.qwen.apiUrl": {
          "type": "string",
          "default": "https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation",
          "description": "通义千问API地址"
        },
        "svn-auto-commit.ai.ernie.apiKey": {
          "type": "string",
          "default": "",
          "description": "文心一言API密钥/access_token（建议使用安全存储）"
        },
        "svn-auto-commit.ai.ernie.model": {
          "type": "string",
          "default": "ernie-bot",
          "description": "文心一言模型名称"
        },
        "svn-auto-commit.ai.ernie.apiUrl": {
          "type": "string",
          "default": "https://aip.baidubce.com/rpc/2.0/ai_custom/v1/wenxinworkshop/chat/completions",
          "description": "文心一言API地址"
        },
        "svn-auto-commit.ai.deepseek.apiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API密钥（建议使用安全存储）"
        },
        "svn-auto-commit.ai.deepseek.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "DeepSeek模型名称"
        },
        "svn-auto-commit.ai.deepseek.apiUrl": {
          "type": "string",
          "default": "https://api.deepseek.com/v1/chat/completions",
          "description": "DeepSeek API地址"
        },
        "svn-auto-commit.ai.moonshot.apiKey": {
          "type": "string",
          "default": "",
          "description": "Moonshot API密钥（建议使用安全存储）"
        },
        "svn-auto-commit.ai.moonshot.model": {
          "type": "string",
          "default": "moonshot-v1-8k",
          "description": "Moonshot模型名称"
        },
        "svn-auto-commit.ai.moonshot.apiUrl": {
          "type": "string",
          "default": "https://api.moonshot.cn/v1/chat/completions",
          "description": "Moonshot API地址"
        },
        "svn-auto-commit.ai.custom.apiUrl": {
          "type": "string",
          "default": "",
          "description": "自定义AI API地址"
        },
        "svn-auto-commit.ai.custom.method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT"],
          "default": "POST",
          "description": "自定义API请求方法"
        },
        "svn-auto-commit.ai.custom.requestBody": {
          "type": "string",
          "default": "",
          "description": "自定义API请求体模板（JSON格式，使用{prompt}占位符）"
        },
        "svn-auto-commit.ai.custom.authHeader": {
          "type": "string",
          "default": "Authorization",
          "description": "自定义API认证头字段名"
        },
        "svn-auto-commit.ai.custom.authPrefix": {
          "type": "string",
          "default": "Bearer ",
          "description": "自定义API认证前缀（如Bearer、ApiKey等）"
        },
        "svn-auto-commit.ai.custom.responsePath": {
          "type": "string",
          "default": "",
          "description": "自定义API响应路径（点号分隔，如choices.0.message.content）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^10.3.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "minimatch": "3.1.2"
  }
}
